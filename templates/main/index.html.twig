{% extends 'base.html.twig' %}

{% block title %}üêä Zoo üêä{% endblock %}
{% block style %}
<style>
.animal-cards {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 2em;
    padding: 2em;
}

.animal-card {
    background: white;
    border-radius: 10px;
    box-shadow: 0 4px 10px rgba(0,0,0,0.1);
    overflow: hidden;
    transition: transform 0.3s ease;
}

.animal-card:hover {
    transform: translateY(-5px);
}

.animal-card img {
    width: 100%;
    height: 200px;
    object-fit: cover;
}

.animal-info {
    padding: 1em;
}

.animal-info h2 {
    margin-top: 0;
    font-size: 1.5em;
    color: #2d3e50;
}
</style>
<link href="{{ asset('assets/styles/styleIndex.css')}}" rel="stylesheet">
{% endblock %}

{% block index %}
<div>
    <h1>ZOO</h1>
    <h2>D√©couvrez notre nouveau ZOO enti√©rement √©cologique </h2>
</div>

<section class='habitat'>
 <div id="carouselExampleControls" class="carousel slide" data-bs-ride="carousel">
        <div class="carousel-inner">
            {% for i in 1..4 %}
            <div class="carousel-item {{ i == 1 ? 'active' }}">
                <img src="\uploads\animals\{{i}}.png" class="d-block w-100" alt="...">
            </div>
            {% endfor %}
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Pr√©c√©dent</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Suivant</span>
        </button>
    </div>
</section>


{# <section class='animaux'> #}
    <h2>NOS AMIS LES ANIMAUX</h2>

    <div class="animal-cards">
    {% for animal in animals %}
        <div class="animal-card">
            <img src="{{ asset('uploads/animals/' ~ animal.image)}}" alt="{{ animal.prenom}}">
            <div class="animal-info">
                <h2>{{ animal.prenom}}</h2>
                <p><strong>Race:</strong> {{ animal.race}}</p>
                <p><strong>Habitat:</strong> {{ animal.habitat.nom}}</p>
            </div>
        </div>
    {% endfor %}
    </div>       


