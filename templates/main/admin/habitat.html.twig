{% extends 'base.html.twig' %}

{% block title %}Hello MainController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>


<div class="example-wrapper">
     <h1>Liste des habitats</h1>

    <table class="table">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Nom</th>
      <th scope="col">Image</th>
      <th scope="col">Description</th>
      <th scope="col">Date de création</th>
      <th scope="col">Dernière modification</th>
      
      <th scope="col">Action</th>


    </tr>
  </thead>
  <tbody>
    
   {% for habitat in habitats %}
    <tr>

    {# // loop.index pour avoir le ID directement d'un tableau : #}
      <th>{{ habitat.id }} </th>
      <td> {{ habitat.nom }}</td>
      <td>      <img width=200 src="\uploads\habitats\{{ habitat.image }}" alt="IMG_Habitat"> </td>
      <td>{{ habitat.description }}</td>

      <td>{{ habitat.createdAt? habitat.createdAt|date('d/m/Y H:i'): 'Non défini'}}</td>
      <td>{{ habitat.updatedAt? habitat.updatedAt|date('d/m/Y H:i'): 'Non défini'}}</td>
      

      {# <td><a href="{{ path('perso', {paramId: habitat.id}) }}" type="button" class="btn btn-info">Afficher</a>  {% if app.user %} <a href="{{ path('edit', {paramId: habitat.id}) }}" type="button" class="btn btn-warning">Modifier</a>  <a href="{{ path('supp', {paramId: habitat.id}) }}" type="button" class="btn btn-danger">Supprimer</a> {% endif %}</td> #}
      
    </tr>

    {% endfor %}

  
</div>

  
{% endblock %}

