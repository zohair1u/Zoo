{% extends 'base.html.twig' %}

{% block title %}Ajout Animal{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

    {% for message in app.flashes('success') %}
        <div class="alert alert-success">{{ message }}</div>
    {% endfor %}

<div class="example-wrapper">
    <h1>Ajouter Animal</h1>

    {{ form_start(animalForm)}}
        {{ form_row(animalForm.prenom) }}
        {{ form_row(animalForm.image, {
            attr: {'required': 'required'},
            label: 'Image'
            })
        }}
        {{ form_row(animalForm.race) }}
        {{ form_row(animalForm.etat) }}
        {{ form_row(animalForm.habitat) }}
        {{ form_row(animalForm.Ajouter, {
            label: 'Ajouter Animal'
            })
        }}
    {{ form_end(animalForm)}}

</div>
{% endblock %}
