{% extends 'base.html.twig' %}

{% block title %}Modification Animal{% endblock %}

{% block body %}

<div class="example-wrapper">
    <h1>Modifier Animal</h1>

    {{ form_start(formEdit)}}
        {{ form_row(formEdit.prenom) }}
        {{ form_row(formEdit.image, {
            attr: {'required': 'required'},
            label: 'Image'
            })
        }}
        {{ form_row(formEdit.race) }}
        {{ form_row(formEdit.etat) }}
        {{ form_row(formEdit.habitat) }}
        {{ form_row(formEdit.Ajouter, {
            label: 'Appliquer la modification'
            })
        }}
    {{ form_end(formEdit)}}  
</div>

<div>
    <h3>Retour vers la liste des animaux par <a href="{{ path('animal_admin') }}">ici</a></h3>
</div>
{% endblock %}
